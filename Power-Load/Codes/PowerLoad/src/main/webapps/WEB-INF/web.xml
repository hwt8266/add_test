<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>PowerLoad</display-name>
  <welcome-file-list>
    <welcome-file>/views/login.html</welcome-file>
  </welcome-file-list>
  
  <filter>
    <filter-name>Auth</filter-name>
    <filter-class>com.siemens.ct.pes.powerload.auth.controller.AuthenticationFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>Auth</filter-name>
    <url-pattern>/api/*</url-pattern>
    <url-pattern>/views/backstage/*</url-pattern>
    <url-pattern>/views/transformer/*</url-pattern>
    <url-pattern>/views/vip/*</url-pattern>
  </filter-mapping>
</web-app>